page{  
  background: #f5f5f5;  
}  
/*总体主盒子*/  
.container1 {  
  position: relative;  
  width: 100%;  
  height: 100%;   
  background-color:#5faee2 ;  
  color: #333;
  margin-top: 10rpx;
}  
/*左侧栏主盒子*/  
.nav_left{  
  display: inline-block;  
  width: 25%;  
  height: 800rpx;
  overflow: auto;
  background: #e2c830;
  color: #fff; 
  text-align: center;
}  
/*左侧栏list的item*/  
.nav_left .nav_left_items{  
  height: 30px;  
  line-height: 30px;  
  padding: 6px 0;  
  border-bottom: 1px solid #dedede;  
  font-size: 14px;  
}  
.nav_left .nav_left_items.active{  
  background: #fff;
  border-left: 5rpx solid #5faee2;
  color: #000;
  transition: .5s;
}  
  
/*右侧栏主盒子*/  
.nav_right{  
  /*右侧盒子使用了绝对定位*/  
  position: absolute;  
  top: 0;  
  right: 0;  
  flex: 1;  
  width: 75%;  
  height: 800rpx;  
  padding: 10px;  
  box-sizing: border-box;  
  background: #fff;  
}  
/*右侧栏list的item*/  
.nav_right .nav_right_items{  
  float: left;  
  width: 33.33%;  
  height: 80px;  
  text-align: center;  
}  
.nav_right .nav_right_items image{  
  width: 50px;  
  height: 30px;  
}  
.nav_right .nav_right_items text{  
  display: block;  
  margin-top: 5px;  
  font-size: 10px;  
  /*设置文字溢出部分为...*/  
  overflow: hidden;  
  white-space: nowrap;  
  text-overflow: ellipsis;  
}
.nodata{
  text-align: center;
  margin-top: 100rpx;
}